<div class="index_product_div">
  <% @products.each do |p| %>
    <div class="index_product_container">
      <h3><%= link_to p.name, product_path(p.id) %></h3>
      <p class="index_product_description"><%= p.description %></p>
      <p class="index_product_price"><sup>$</sup><%= p.price_in_cents.to_i * 0.01 %></p>
    </div>


  <% end %>
</div>